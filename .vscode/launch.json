  "version": "0.2.0",
  "configurations": [
    {
      // Generated by template
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "runtimeArgs": [
        "--harmony",
        "--debug=5858"
      ],
      "program": "${workspaceRoot}/index.js",
      "restart": true,
      "port": 5858,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      // Old school
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/node_modules/.bin/nodemon",
      "args": [
        "--harmony", 
        "${workspaceRoot}/index.js"
      ]
    }
  ]
}